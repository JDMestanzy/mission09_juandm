@{
    ViewData["Title"] = "Home Page";

}
@model BooksViewModel



<div class="text-center">
    <h1 class="display-4">Welcome to the Bookstore</h1>
</div>
@foreach (Books b in Model.Books)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @b.Title
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@b.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">
            <ul>
                <li>Author: @b.Author</li>
                <li>Publisher: @b.Publisher</li>
                <li>Isbn: @b.Isbn</li>
                <li>Classification: @b.Classification</li>
                <li>Category: @b.Category</li>
                <li>PageCount: @b.PageCount pages</li>
            </ul>
        </div>
    </div>
}


<div class="page-info" page-model="@Model.PageInfo" page-action="Index" page-classes-enabled="true"></div>
