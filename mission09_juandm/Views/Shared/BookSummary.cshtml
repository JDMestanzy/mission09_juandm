@model Books

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1 d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            @Model.Title
        </h4>
        <span class="badge bg-primary rounded-pill">
            <small>@Model.Price.ToString("c")</small>
        </span>
    </div>
    <div class="card-text p-1">
        <ul>
            <li>Author: @Model.Author</li>
            <li>Publisher: @Model.Publisher</li>
            <li>Isbn: @Model.Isbn</li>
            <li>Classification: @Model.Classification</li>
            <li>Category: @Model.Category</li>
            <li>PageCount: @Model.PageCount pages</li>
        </ul>
    </div>

    <form method="post" asp-page="/Buy">
        <div class="card-footer d-flex justify-content-between align-items-center">
           
            <div>
                <input type="hidden" asp-for="@Model.BookId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <button type="submit" class="btn btn-success btn-sm">Buy</button>
            </div>
        </div>
    </form>
</div>
