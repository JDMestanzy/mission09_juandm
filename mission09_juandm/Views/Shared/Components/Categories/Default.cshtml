<div class="d-grid">
    <a asp-controller="Home" asp-action="Index" asp-route-bookcategory="" asp-route-pageNum="1" class="btn btn-effect gradient">Home</a>
    <br />
    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookcategory="@t" asp-route-pageNum="1" class="@(ViewBag.SelectedCategory == t ? "btn-primary btn-effect gradient" : "btn-outline-secondary btn-effect gradient")">@t</a>
        <br />
    }
</div>

