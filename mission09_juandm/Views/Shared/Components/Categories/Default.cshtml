<div class="d-grid">
    <a asp-controller="Home" asp-action="Index" asp-route-bookcategory="" asp-route-pageNum="1" class="btn btn-primary btn-effect gradient animate__animated animate__fadeInDown rounded bg-gradient" style="width: 100px; background-color: #e1cdda;">Home</a>
    <br />
    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookcategory="@t" asp-route-pageNum="1" class="@(ViewBag.SelectedCategory == t ? "btn btn-primary btn-effect gradient animate__animated animate__fadeInDown rounded" : "btn btn-outline-secondary btn-effect gradient btn-link")" style="width: 100px">@t</a>
        <br />
    }
</div>
